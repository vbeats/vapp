.login
  width 100vw
  height 100vh
  z-index 999999
  position fixed
  top 0
  background rgba(0, 0, 0, .4)
  display flex
  flex-direction column
  justify-content center
  align-items center

  .content
    display flex
    flex-direction column
    align-items center
    background #fff
    border-radius 18px
    padding 30px

    .title
      font-size 1.2rem
      font-weight bold
      margin-top 20px

    .hint
      font-size .8rem
      color lightgray
      margin-top 20px

    .logo
      width 500px
      height 400px

    .bt-login
      width 400px
      height 80px
      font-size 1rem

  .close
    width 40px
    height 40px
    margin-top 20px
    color #fff